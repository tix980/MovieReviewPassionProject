@model List<MovieReviewPassionProject.Models.ActorDto>
@{
    ViewBag.Title = "List";
}
<a href="/Actor/New" class="navlink">Add</a>
<div class="detailInfo">
    <h1>Actor List</h1>
    <div class="flex-container">
        @foreach (var actor in Model)
        {
        <div class="flex-item">
            @{
                string imgurl = "/Content/img/no-poster.jpg";
                if (actor.ActorPoster)
                {
                    imgurl = "/Content/img/" + actor.ActorId + "." + actor.ActorPosterExtension;
                }
            }
            <a href="/actor/Details/@actor.ActorId"><img src=@imgurl alt="actor picture" id="actor-pic" width="250" height="350" /></a>
                <!--<h2><a href="/actor/Details/@actor.ActorId">@actor.ActorName</a></h2>
    <div> Age : @actor.ActorAge</div>
    <div> Total rewards : @actor.RewardCount</div>
    <div>Education : @actor.Education</div>-->
</div>
        }
    </div>
</div>
